---
import layoutmain from '/Users/USER/molecular-moon/src/layouts/layoutmain.astro';
---
<layoutmain title="Contac">
    <p> 
        <div class="formulario-contacto">
            <h2 class="titulocontacto">¡Contáctanos!</h2>
            <form action="#" method="POST">
                <div class="formulario-contacto">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" required>
                    <div class="error-message" id="nombreError"></div>
                </div>
                <div class="formulario-contacto">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" required>
                    <div class="error-message" id="emailError"></div>
                </div>
                <div class="formulario-contacto">
                    <label for="asunto">Asunto:</label>
                    <input type="text" id="asunto" name="asunto">
                    <div class="error-message" id="asuntoError"></div>
                </div>
                <div class="formulario-contacto">
                    <label for="mensaje">Mensaje:</label>
                    <textarea id="mensaje" name="mensaje" rows="5" required></textarea>
                    <div class="error-message" id="mensajeError"></div>
                </div>
                <button type="submit">Enviar Mensaje</button>
            </form>
        </div>
    </p>
</layoutmain>
    
       
    
        